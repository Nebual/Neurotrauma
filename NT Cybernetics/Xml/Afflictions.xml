    <!-- Oxygen low resistance -->
    <Effect minstrength="0" maxstrength="100" strengthchange="0" resistancefor="oxygenlow" minresistance="0" maxresistance="0.6">
      <StatValue stattype="HoldBreathMultiplier" minvalue="1" maxvalue="0.5" />
      <StatusEffect target="Character" interval="5">
        <Affliction identifier="haste" minamount="0" maxamount="3"/> <!-- Faster movement/attack -->
      </StatusEffect>
    </Effect>
    <PeriodicEffect mininterval="300" maxinterval="600"> <!-- Cyberpsychosis -->
      <StatusEffect target="Character" multiplybymaxvitality="true" comparison="and">
        <Conditional immunity="gte 80"/>
        <Affliction identifier="psychosis" minstrength="0" maxstrength="40" probability="0.25" />
      </StatusEffect>
    </PeriodicEffect>
    <!-- todo: cyberlung's granting pressure resistance (not immunity, just extra time) would be cool if possible. Maybe via lua patching the pressure explode timer's getter which is private... -->
  </Affliction>
  <Affliction
